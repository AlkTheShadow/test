<script>

function Teclas(e){
    var unicode=e.keyCode? e.keyCode : e.charCode
    
	if (unicode=="71"){
		console.log("Se ha presionado g");
		Funcionar();
	}else if (unicode=="66"){
		console.log("Se ha presionado b");
		Blanquear();
	}
}

</script>
<script>
function Funcionar (){
var Y= document.getElementById("Entrada");
var yk= Y.value;
var T = document.getElementById("Salida");
var D = corregir(yk);
D = Recode(D);
T.value=D;
T.select();


}
</script>

<script>
 function Invertir(){
 var T = document.getElementById("Salida");
 var Y= document.getElementById("Entrada");
 Y.value=T.value;
 
 }

</script>
<script>
function Blanquear(){
var Y= document.getElementById("Entrada");
Y.value="";

}


</script>
<script>

function Decode (a){
var SAL=[];
var ENT= a.toString().split("");
for (var i = 0; i < a.length; i++){
var ActualA= ENT[i];
var valor = ActualA.charCodeAt(0);	
SAL[SAL.length] = valor;
	}
return SAL

}

function corregir (a){
raw = Decode(a);
SAL =[];
// recorrer
for (var i = 0; i < raw.length; i++){
Actual = raw[i];
anterior = raw[i-1];
if (Actual==10 && anterior !== 46){
Actual=32;
}
SAL[SAL.length] = Actual;
}
return SAL;
}

function Recode (a){
var SAL=[];
for (var i = 0; i < a.length; i++){
var ActualA= a[i];
var car = String.fromCharCode(ActualA);	
SAL[SAL.length] = car;
	}
	
SAL= SAL.join("");	
return SAL

}


</script>


